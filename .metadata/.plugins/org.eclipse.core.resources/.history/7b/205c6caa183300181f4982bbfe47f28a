package ex2_throws;

import java.util.InputMismatchException;
import java.util.Scanner;

public class Test {
	
	public void getRes() throws InputMismatchException {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.print("정수: ");
		int num;
		
		try {
			
			num = sc.nextInt();
			System.out.println("결과: " + num);
			
		} catch (Exception e) {
			
			System.out.println("정수만 입력하세요.");
			
		}
		
		
	} // getRes()
	
}
